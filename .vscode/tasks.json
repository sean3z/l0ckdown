{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/I", "${workspaceFolder}/include",
                "/link",
                "/LIBPATH:C:/Program Files (x86)/Windows Kits/10/Lib/10.0.22621.0/um/x64",
                "d3d11.lib",
                "d3dcompiler.lib",
                "dxguid.lib",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/**/*.cpp",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                //"-v",
                "-g",
                "@${workspaceFolder}\\filelist.txt",
                "-I", "${workspaceFolder}\\",
                "-I", "${workspaceFolder}\\overlay\\imgui",
                "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lD3D11",                   // Link DirectX 11
                "-lDXGI",                    // Link DXGI
                "-lD3DCOMPILER",             // Link D3DCompiler
                "-ldwmapi",
                "-mwindows"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}